        <meta name="turbo-visit-control" content="reload">
  
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

    </head>
    <body>
    <div class="container">

<nav class="mb-5">

<div id="logo_mobile_container">

    <a href="{{ path('app_index') }}">
        <img src="/assets/img/the_district_brand/nav_logo.svg" alt="Logo" id="logo_nav">
    </a>

 <div id="btn-nav-div">  

    <input type="checkbox" id="checkbox">
        <label for="checkbox" class="toggle">
            <div class="bars" id="bar1"></div>
            <div class="bars" id="bar2"></div>
            <div class="bars" id="bar3"></div>
        </label>

    </div>

<a id="cart_logo_mobile" href="{{ path('app_index') }}">
        <img src="/assets/img/logo/shoppinglogo.png" alt="Shopping Logo" id="shopping_nav">
    </a>

</div>
    <ul>
        <li><a href="{{ path('app_index') }}">Accueil</a></li>
        <li><a href="{{ path('app_categories') }}">Catégories</a></li>
        <li><a href="{{ path('app_plats') }}">Plats</a></li>
        <li><a href="{{ path('app_contact') }}">Contact</a></li>
        <li><a href="{{ path('app_index') }}">Connexion / Inscription</a></li>
    </ul>

    <a id="cart_logo_desktop" href="{{ path('app_panier') }}">
        <img  src="/assets/img/logo/shoppinglogo.png" alt="Shopping Logo" id="shopping_nav">
    </a>
</nav>

        {% block body %}{% endblock %}

</div>

<footer>

    <div id="footer_container">

        {# <div id="footer_logo_container">
            <a href="{{ path('app_index') }}">
                <img src="/assets/img/the_district_brand/big_white_logo.svg" alt="Logo" id="logo_footer">
            </a>
        </div> #}

        <div id="footer_links_container" class="mt-3">
            <ul>
                <li><a href="{{ path('app_index') }}">Accueil</a></li>
                <li><a href="{{ path('app_categories') }}">Catégories</a></li>
                <li><a href="{{ path('app_plats') }}">Plats</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                <li><a href="{{ path('app_index') }}">Connexion / Inscription</a></li>
            </ul>
        </div>

        <div id="footer_social_container">
            <ul>
                <li><a href="https://www.facebook.com/"><img src="/assets/img/social_link/facebook_icon.svg" alt="Facebook" id="facebook"></a></li>
                <li><a href="https://www.instagram.com/"><img src="/assets/img/social_link/instagram_icon.svg" alt="Instagram" id="instagram"></a></li>
                <li><a href="https://www.twitter.com/"><img src="/assets/img/social_link/x_icon.svg" alt="Twitter" id="twitter"></a></li>
