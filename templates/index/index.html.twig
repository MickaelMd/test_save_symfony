{% extends 'base.html.twig' %}

{% block title %}The District : Accueil{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message|raw }}
    </div>
{% endfor %}

<h2 class="text-center">Nos catégories</h2>
<div id="categoriesCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        {% for category in categories %}
            {% if loop.index % 3 == 1 %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div class="row justify-content-center">
            {% endif %}
            
            <div class="col-4">
            <a href="{{ path('app_categories', {'id': category.id}) }}#link-cat-{{ category.id }}" class="text-black text-decoration-none link-opacity-75-hover">
                <div class="card carousel_back">
                    <img src="{{ asset('/assets/img/category/' ~ category.image) }}" class="card-img-top fixed_img_carousel_index" alt="Image de la catégorie {{ category.libelle }}">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                        {{ category.libelle }}
                        </h5>
                    </div>
                </div>
                </a>
            </div>

            {% if loop.index % 3 == 0 or loop.last %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#categoriesCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Précédent</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#categoriesCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Suivant</span>
    </button>
</div>

<div class="d-flex justify-content-center mt-3">
 <a id="btn_accueil_plats" class="m-3 mb-5 text-center" href="{{path('app_categories')}}">Découvrir nos catégories et leurs plats associés</a>
</div>


<h2 class="text-center">Nos plats</h2>
<section id="cards_index_plat_general">

    {% for plat in plats %}
      
      <div class="cards_index_plat">
      
        <h3 class="text-center pt-1 pb-1 mt-2"> {{plat.libelle}} </h3>

        <div class="cards_index_plat_img">
        <img src="{{ asset('/assets/img/food/' ~ plat.image) }}"  alt="Image {{plat.libelle}}"> 
        </div>

       <a class="btn_commande_plat" href="{{ path('app_plat_show', {'id': plat.id}) }}">Commander</a>
      </div>

    {% else %}
       <h1 class="erreur_bdd text-danger"> Erreur dans le chargement des plats. </h1>
    {% endfor %}
</section>
<div class="d-flex justify-content-center">
 <a id="btn_accueil_plats" class="m-3 mb-5 text-center" href="{{path('app_plats')}}">Découvrir l'intégralité de nos plats</a>
</div>

{% endblock %}
